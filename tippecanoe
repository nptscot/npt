# Tippcanoe Instructions using WSL2

cd /mnt/d/GitHub/nptscot/npt/outputs
cd /mnt/d/GitHub/atumscot/atumscot/outputs


# Route network

tippecanoe -o rnet.pmtiles \
  --name=rnet \
  --layer=rnet \
  --attribution=UniverstyofLeeds \
  --minimum-zoom=6 \
  --maximum-zoom=13 \
  --drop-smallest-as-needed \
  --maximum-tile-bytes=5000000 \
  --simplification=10 \
  --buffer=5 \
  --force  rnet.geojson


# Routes

tippecanoe -o routes.mbtiles \
  --name=routes \
  --layer=routes \
  --attribution=UniverstyofLeeds \
  -zg \
  --minimum-zoom=6 \
  --drop-smallest-as-needed \
  --extend-zooms-if-still-dropping \
  --maximum-tile-bytes=5000000 \
  --simplification=10 \
  --buffer=5 \
  --force  routes.geojson

mb-util routes.mbtiles --image_format=pbf routes

# Zones

tippecanoe -o zones.mbtiles \
  --name=zones \
  --layer=zones \
  --attribution=UniverstyofLeeds \
  -zg \
  --minimum-zoom=6 \
  --coalesce-smallest-as-needed \
  --detect-shared-borders \
  --extend-zooms-if-still-dropping \
  --maximum-tile-bytes=5000000 \
  --simplification=10 \
  --buffer=5 \
  --force  zones.geojson

mb-util zones.mbtiles --image_format=pbf zones


# Data Zones

tippecanoe -o data_zones.pmtiles \
  --name=data_zones \
  --layer=data_zones \
  --attribution=UniverstyofLeeds \
  -zg \
  --minimum-zoom=6 \
  --coalesce-smallest-as-needed \
  --detect-shared-borders \
  --extend-zooms-if-still-dropping \
  --maximum-tile-bytes=5000000 \
  --simplification=10 \
  --buffer=5 \
  --force  data_zones.geojson



